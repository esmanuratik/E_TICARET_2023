@using E_TICARET_2023.Models
@{
    ViewBag.Title = "Home Page";
}

<main>


    <div class="row">
        <section class="col-md-3" aria-labelledby="gettingStartedTitle">
            <h2 id="gettingStartedTitle">Kategoriler</h2>

            <ul>
                @foreach (var item in (List<Kategoriler>)ViewBag.KategoriListesi)
                {
                    <li>
                        @item.KategoriAdi
                    </li>
                }
            </ul>

        </section>
        <section class="col-md-9" aria-labelledby="librariesTitle">
            <h2 id="librariesTitle">Ürün Bilgileri</h2>
            <div class="row">
                @foreach (var item in (List<Ürünler>)ViewBag.UrunListesi)
                {


                    <div  class="card border-warning mb-9"style="width: 20rem;">

                        <h5 class="card-title">@item.UrunAdi</h5>
                        <img src="~/Resim/@(item.UrunId).jpg" width="100" height="100" />

                        <div class="card-body" style="display:inline-block;">
                            <a href="/Home/UrunDetay/@item.UrunId" class="btn btn-warning">Ürün Detay</a>
                            <span style="display:flex; justify-content:right;align-items:flex-end;margin-top:16px; font-size:14px;font-weight:bold;float:right">@item.UrunFiyati TL</span>
                        </div>
                    </div>




