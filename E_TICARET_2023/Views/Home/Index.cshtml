@using E_TICARET_2023.Models

@{
    ViewBag.Title = "AnaSayfa";
}

<link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">

<style>
    .flex-container {
        display: flex;
        flex-wrap: wrap;
        gap: 28px;
        margin-top:2%;
        border:1px solid;
        margin-left:4%;
        padding:6%;
        box-sizing:border-box;
    }

    .flex-item {
        flex: 1;
        min-width: calc(33.33% - 20px); /* Üç sütunlu düzen için */
        box-sizing: border-box;
        margin-left:-10px;
    }
    #image{
        width:100px;
        height:100px;
    }
    #urdetbut{
        margin-top:2%;
    }
    #sidebar {
        margin-top: -1.2%;
        margin-left: -6%;
        width: 6%;
    }
    .w3-sidebar{
        width:23%;
       
    }


</style>

<div class="w3-sidebar w3-bar-block w3-border-right" style="display:none" id="mySidebar">

    <button onclick="w3_close()" class="w3-bar-item w3-large">Close &times;</button>
    
    <h2 id="heading">Kategoriler</h2>
    <ul>
        @foreach (var item in (List<Kategoriler>)ViewBag.KategoriListesi)
        {
            <li>
                @Html.ActionLink(item.KategoriAdi, "Kategori", new { id = item.KategoriId })
            </li>
        }
    </ul>

</div>

<div class="w3-teal col-md-3" id="sidebar">

    <button class="w3-button w3-teal w3-xlarge" onclick="w3_open()">☰</button>
</div>

        <div class="col-md-8" id="urun">
            <div class="flex-container">
                @foreach (var item in (List<Ürünler>)ViewBag.UrunListesi)
                {
                    <div class="flex-item">
                        <div class="row" @*style="border:1px solid"*@>
                            <h5>@item.UrunAdi</h5>
                            <img id="image" src="~/Resim/@(item.UrunId).jpg" />
                            <br /><br />
                            <p>
                                <a href="/Home/UrunDetay/@item.UrunId" class="btn btn-secondary" id="urdetbut">Ürün Detay &raquo;</a>
                                <span style="font-size:14px;font-weight:bold;">@item.UrunFiyati TL</span>
                            </p>
                        </div>
                    </div>             

                }
            </div>
           
        </div>
  



<script>
    function w3_open() {
        document.getElementById("mySidebar").style.display = "block";

    }

    function w3_close() {
        document.getElementById("mySidebar").style.display = "none";
    }
    function scrollRight() {

        const kaydirButton = document.getElementById("mySidebar");
        const kaydirilanDiv = document.getElementById("urun");

        kaydirButton.addEventListener("click", function () {
            kaydirilanDiv.scrollLeft += 100; // 100 piksel sağa kaydır
        });

    }
</script>






