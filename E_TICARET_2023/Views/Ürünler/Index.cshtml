@model IEnumerable<E_TICARET_2023.Models.Ürünler>

@{
    ViewBag.Title = "Index";
}


<h2>Ürünler</h2>

<p>
    @Html.ActionLink("Yeni Ürün Ekle", "Create", null, new {@class="btn btn-info"})
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.UrunAdi)
        </th>
        <th>
            Resim
        </th>
        <th>
            @Html.DisplayNameFor(model => model.UrunAciklamasi)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.UrunFiyati)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Kategoriler.KategoriAdi)
        </th>
        <th></th>
    </tr>
@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.UrunAdi)
        </td>
        <td>
            <img src="~/Resim/@(item.UrunId).jpg" width="100"/>
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.UrunAciklamasi)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.UrunFiyati)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Kategoriler.KategoriAdi)
        </td>
        <td>

            @Html.ActionLink("Düzenle", "Edit", new { id = item.UrunId }, new { @class = "btn btn-outline-warning btn-sm bi bi-pencil-square" }) |
            @Html.ActionLink("Detay", "Details", new { id = item.UrunId }, new { @class = "btn btn-outline-secondary btn-sm bi bi-ticket" }) |
            @Html.ActionLink("Sil", "Delete", new { id = item.UrunId }, new { @class = "btn btn-outline-danger btn-sm bi bi-trash" }) 
          
        </td>
    </tr>
   
}

</table>

